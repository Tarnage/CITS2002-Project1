int factorial(int i)
{
    if(i){
        return i*factorial(i-1);
    }
    else{
        return 1;
    }
}

int main(void)
{
    int times = 5;
    int n = 0;
    

    while(times){
        print n;
        print " fatorial is ";
        print factorial(n);
        print "\n";
        times = times - 1;
        n  = n + 1;
    }
    return 0;
}