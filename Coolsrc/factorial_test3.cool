int factorial(int i)
{
  if(i) {
    return i*factorial(i-1);
  }
  else {
    return 1;
  }
}

int main(void)
{
// limited by our 16-bit architecture 
  int times = 7;
  int n     = 0;

  while(times) {
    print n;
    print " factorial is ";
    print factorial(n);
    print "\n";

    times = times - 1;
    n     = n + 1;
  }
  return 0;
}
